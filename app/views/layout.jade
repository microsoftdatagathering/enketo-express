doctype html
html(manifest=manifest, lang=language, dir=dir(language))
  head
    title= title

    meta(charset="utf-8")
    meta(name="author", content="Martijn van de Rijdt (Enketo LLC)")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")

    block redirect

    block style

    block global

  - var cl = (iframe) ? 'iframe' : ''
  body(class=cl)
    block content

    block script

    if analytics
      include component/analytics

    if livereload
      script(src="//localhost:35729/livereload.js")
